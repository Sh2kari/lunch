%p#notice= notice
= simple_form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this rorde from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name,size: 40
  .field
    = f.label :email
    %br/
    = f.text_field :name,size: 40
  .actions
    = f.submit 'Place Order'
    %br/