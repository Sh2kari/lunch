%h1 Listing orders
%table
  %tr
    %th
      Name
      %th
        %th Email
        %th Price
        %th.offset Destroy
  - @orders.each do |order|
    %tr.offset
      %td= order.name
      %td
      %td= order.email
      %td= order.price
      %td= link_to 'Destroy',order, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Order', new_order_path
%p= will_paginate @orders